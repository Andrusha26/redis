FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build
WORKDIR /app
COPY Redis.FunctionalTests/* ./
RUN dotnet restore

ARG FIRST_REPLICATION_URL
ARG SECOND_REPLICATION_URL

ENV FIRST_REPLICATION_URL=${FIRST_REPLICATION_URL}
ENV SECOND_REPLICATION_URL=${SECOND_REPLICATION_URL}

ENTRYPOINT ["dotnet", "test"]